
<%- include admin_head %>
<form action="admin_revise" method="post">
<div class="col-md-10 content">
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><%= err %></div>
  <div class="panel-body">
    <p class="text-center">修改管理员信息</p>
    <input type="hidden" name="_id" value="<%= infos._id %>">
    <input type="hidden" name="username" value="<%= infos.user_id %>">
    <input type="hidden" name="admin" value="<%= admin %>">
  </div>


   <!-- Table -->
   <table class="table">
       <tr>
         <td class="text-center">用户名</td>
         <td class="text-center"><input type="text" name="user_id" value="<%= infos.user_id %>"></td>
       </tr>
       <tr>
         <td class="text-center">姓名</td>
         <td class="text-center"><input type="text" name="name" value="<%= infos.name %>"></td>
       </tr>
       <tr>
         <td class="text-center">性别</td>
         <td class="text-center"><input type="text" name="sex" value="<%= infos.sex %>"></td>
       </tr>
       <tr>
         <td class="text-center">密码</td>
         <td class="text-center"><input type="text" name="password" value="<%= infos.password %>"></td>
       </tr>
       <tr>
         <td class="text-center">密保问题</td>
         <td class="text-center"><input type="text" name="problem" value="<%= infos.problem %>"></td>
       </tr>
       <tr>
         <td class="text-center">密保答案</td>
         <td class="text-center"><input type="text" name="answer" value="<%= infos.answer %>"></td>
       </tr>
       <tr>
         <td class="text-center">个人简历</td>
         <td class="text-center"><input type="text" name="profile" value="<%= infos.profile %>"></td>
       </tr>
       <tr>
         <td class="text-center">电话</td>
         <td class="text-center"><input type="text" name="phone" value="<%= infos.phone %>"></td>
       </tr>
       <tr>
         <td class="text-center">邮箱</td>
         <td class="text-center"><input type="text" name="email" value="<%= infos.email %>"></td>
       </tr>
     </table>
</div>
<style>
.col-center-block {
    float: none;
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 100%;
}
</style>
<button class="btn btn-default col-center-block btn-info" type="submit" name="b" value="2" >修改</button>
</div>
</form>

<%- include admin_footer %>

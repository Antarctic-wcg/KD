<%- include admin_head %>

<div class="col-md-10 content">

           <div>
           <div class="panel panel-primary">
           <div class="panel-heading">
               <span class="glyphicon glyphicon-list"></span>Sortable Lists
                  <div class="pull-right">
                    <a href="admin_add?admin=<%= admin %>" type="button" class="btn btn-success pull-right" >
                      添加管理员
                    </a>
                  </div>
           </div>
           <div class="panel-body">
               <ul class="list-group">
                 <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                         <thead>
                             <tr>
                                 <th>_id</th>
                                 <th>管理员名</th>
                                 <th>密码</th>
                                 <th>权限</th>
                                 <th>操作</th>
                             </tr>
                         </thead>

                         <tbody>
                           <% infos.forEach(function(stu){ %>
                             <tr>
                                 <td class="a"><div class="neirong"><%= stu._id %></div></td>
                                 <td class="a"><div class="neirong"><%= stu.admin_id %></div></td>
                                 <td class="a"><div class="neirong"><%= stu.password %></div></td>
                                 <td class="a"><div class="neirong"><%= stu.jurl %></div></td>
                                 <td>
                                   <div class="pull-right action-buttons">
                                       <a href="admin_revise?_id=<%= stu._id %>&admin=<%= admin %>&b=1"><span class="glyphicon glyphicon-pencil"></span></a>
                                       <a href="deletes?_id=<%= stu._id %>&admin=<%= admin %>&b=1" class="trash"><span class="glyphicon glyphicon-trash"></span></a>
                                   </div>

                                 </td>
                             </tr>
                           <% }); %>
                         </tbody>
                     </table>

               </ul>
           </div>
           <div class="panel-footer">

           </div>
       </div>
           </div>
</div>
<%- include admin_footer %>
